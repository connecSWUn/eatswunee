<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:background="@drawable/review_item_shape"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/com_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="같이 먹을 사람 구해요"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/com_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="50주년"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="·"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/com_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="300"
                android:paddingTop="5dp"
                android:paddingBottom="20dp"
                android:text="오후 12:00 - 오후 1:30"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/com_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/community_state_finding"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="찾는 중..."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/com_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:text="2023.03.27 11:45"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>