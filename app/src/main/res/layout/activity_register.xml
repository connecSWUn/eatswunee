<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="130dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="회원가입" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idInput"
                    android:layout_width="232dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="50dp"
                    android:hint="아이디"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/profile_stroke_background"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"
                android:backgroundTint="#4D9BA5C2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nickInput"
                    android:layout_width="232dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="50dp"
                    android:ems="10"
                    android:hint="닉네임"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/profile_stroke_background" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/buttondbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"
                android:backgroundTint="#4D9BA5C2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/btn_show"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/join_pw"
                    android:layout_width="259dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="16dp"
                    android:hint="비밀번호"
                    android:contentDescription="pw"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:background="@drawable/profile_stroke_background"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/btn_show2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/join_pwck"
                    android:layout_width="261dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="id"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:background="@drawable/profile_stroke_background"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/join_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#9BA5C2"
            android:text="회원가입" />

        <Button
            android:id="@+id/return_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D9BA5C2"
            android:text="돌아가기" />

    </LinearLayout>
</LinearLayout>