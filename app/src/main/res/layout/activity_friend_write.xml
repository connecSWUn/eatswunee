<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/write_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="먹어보슌"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:text="취소"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:text="완료"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_finish2"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:background="@color/softColor"
        android:text="완료"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_marginTop="95dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="제목:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText_title"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/profile_stroke_background"
                android:ems="10"
                android:hint="제목을 입력하세요"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:text=""
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/spinner_array_status" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/textView_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:text="장소:"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_place"
                android:layout_width="91dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="하고 싶은 설명"
                android:entries="@array/spinner_array_place"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView_time"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="시간대 :"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_time1"
                android:layout_width="51dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="하고 싶은 설명"
                android:entries="@array/spinner_array_time"
                android:padding="5dp" />

            <TextView
                android:id="@+id/textView_time2"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="~"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_time2"
                android:layout_width="61dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="하고 싶은 설명"
                android:entries="@array/spinner_array_time2"
                android:padding="5dp" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_margin="25dp"
        android:background="@drawable/profile_stroke_background"
        android:ems="10"
        android:gravity="top"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:text="예시 게시글"
        app:layout_constraintBottom_toTopOf="@+id/button_finish2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>